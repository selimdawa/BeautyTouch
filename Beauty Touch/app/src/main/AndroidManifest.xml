<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.flatcode.beautytouch">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="false"
        android:theme="@style/OneTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:supportsRtl">
        <!--
         android:multiprocess="true" //or maybe
        android:process=":remote"
        -->
        <activity
            android:name="com.flatcode.beautytouch.Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.flatcode.beautytouch.Auth.RegisterActivity" />
        <activity android:name="com.flatcode.beautytouch.Auth.LoginActivity" />
        <activity android:name="com.flatcode.beautytouch.Auth.AuthActivity" />
        <activity android:name="com.flatcode.beautytouch.Auth.ForgetPasswordActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.ProfileActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.PostDetailsActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.FavoritesActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.MainActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.RewardActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.LeaderboardActivity" />
        <activity android:name="com.flatcode.beautytouch.Activity.LeaderboardOldActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_id" />
    </application>

</manifest>