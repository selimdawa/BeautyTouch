            android:name="com.flatcode.beautytouchadmin.Activity.ShoppingCentersAddActivity"
            android:exported="false" />
        <activity
            android:name="com.flatcode.beautytouchadmin.Activity.PostEditActivity"
            android:exported="false" />
        <activity
            android:name="com.flatcode.beautytouchadmin.Activity.ADsInfoActivity"
            android:exported="false" />
        <activity
            android:name="com.flatcode.beautytouchadmin.Activity.ADsMeterActivity"
            android:exported="false" />
        <activity
            android:name="com.flatcode.beautytouchadmin.Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.flatcode.beautytouchadmin.Auth.LoginActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.MainActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.SessionOldInfoActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.SessionNowInfoActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.PostDetailsActivity" />
