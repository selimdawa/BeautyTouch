        <activity android:name="com.flatcode.beautytouchadmin.Activity.HotProductActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.UserDetailActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.PostsActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.ProfileActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Activity.UsersActivity" />
        <activity android:name="com.flatcode.beautytouchadmin.Auth.ForgetPasswordActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
